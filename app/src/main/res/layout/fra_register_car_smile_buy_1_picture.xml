<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top|center_horizontal"
    android:background="@color/back_e5"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="18dp">

        <EditText
            android:id="@+id/targetCarID"
            fontPath="fonts/NotoBold.otf"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_h"
            android:background="@drawable/white_textbox"
            android:gravity="center_vertical|left"
            android:hint="@string/prompt_target_car_id"
            android:inputType="number"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:textColor="@color/text_66"
            android:textColorHint="@color/text_a2"
            android:textSize="@dimen/text_50"/>

        <Button
            android:id="@+id/getTargetCar"
            fontPath="fonts/NotoBold.otf"
            android:layout_width="91dp"
            android:layout_height="31dp"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="8dp"
            android:background="@drawable/button_yellow"
            android:includeFontPadding="false"
            android:text="@string/action_request_target_car"
            android:textAlignment="center"
            android:textColor="@color/text_ff"
            android:textSize="@dimen/text_50"/>
    </FrameLayout>

    <TextView
        android:id="@+id/targetCarResult"
        fontPath="fonts/NotoBold.otf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/text_target_car_no_exist"
        android:textColor="@color/text_fb"
        android:textSize="@dimen/text_50"/>

    <TextView
        fontPath="fonts/NotoBold.otf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/white_textbox"
        android:paddingBottom="8dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="8dp"
        android:text="@string/text_upload_smilebuy_rule"
        android:textColor="@color/text_66"
        android:textSize="@dimen/text_50"/>


    <GridView android:scrollbarStyle="outsideOverlay"
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top|center_horizontal"
        android:horizontalSpacing="10dp"
        android:listSelector="@drawable/button_trans"
        android:numColumns="2"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:stretchMode="columnWidth"
        android:verticalSpacing="10dp"/>


</LinearLayout>
