<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingLeft="12dp"
              android:paddingRight="12dp"
              android:paddingTop="18dp"
              tools:ignore="MissingPrefix">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dark_gray"
            android:minHeight="46dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/num"
                fontPath="fonts/ArialBlack.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:text="Q1"
                android:textColor="@color/text_ff"
                android:textSize="@dimen/text_60"/>

            <TextView
                android:id="@+id/question"
                fontPath="fonts/NotoBold.otf"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="12dp"
                android:layout_weight="1"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="Qustion"
                android:textColor="@color/text_ff"
                android:textSize="@dimen/text_60"/>

            <ImageButton
                android:id="@+id/delete"
                android:layout_width="46dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|right"
                android:background="@drawable/button_trans" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="12dp"
            android:src="@drawable/icon_x"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="12dp"
            android:src="@drawable/triangle"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:background="@drawable/white_textbox"
        android:orientation="horizontal">

        <TextView
            fontPath="fonts/ArialBlack.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="8dp"
            android:text="A"
            android:textColor="@color/text_66"
            android:textSize="@dimen/text_60"/>

        <EditText
            android:id="@+id/answer"
            fontPath="fonts/NotoBold.otf"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:background="@null"
            android:ems="200"
            android:gravity="start"
            android:hint="@string/prompt_sell_interview"
            android:inputType="textMultiLine"
            android:padding="8dp"
            android:textColor="@color/text_66"
            android:textColorHint="@color/text_a2"
            android:textSize="@dimen/text_45"/>

    </LinearLayout>


</LinearLayout>
