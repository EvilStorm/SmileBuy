<ScrollView android:scrollbarStyle="outsideOverlay" xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/back_e5"
            tools:ignore="MissingPrefix">

    <LinearLayout
        android:id="@+id/interviewContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@color/back_f1">

            <TextView
                fontPath="fonts/NotoBold.otf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:gravity="center"
                android:text="@string/content_sell_interview"
                android:textColor="@color/text_a2"
                android:textSize="@dimen/text_50"/>

        </FrameLayout>


        <Button
            android:id="@+id/addInterview"
            fontPath="fonts/NotoBold.otf"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_h"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/button_red"
            android:includeFontPadding="false"
            android:text="@string/action_add_interview"
            android:textColor="@color/text_ff"
            android:textSize="@dimen/text_50"/>


    </LinearLayout>

</ScrollView>
