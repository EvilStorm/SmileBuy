<ScrollView android:scrollbarStyle="outsideOverlay"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="18dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="18dp"
    tools:ignore="MissingPrefix">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:orientation="vertical"
        android:paddingBottom="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_message_white"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.percent.PercentFrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v4.view.ViewPager
                        android:id="@+id/pictureSlider"
                        app:layout_aspectRatio="192%"
                        app:layout_widthPercent="100%"/>

                </android.support.percent.PercentFrameLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/photocard_gradation"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:layout_gravity="bottom"
                    android:background="@color/back_70"
                    android:orientation="horizontal"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp">

                    <TextView
                        fontPath="fonts/NotoBold.otf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/text_smilebuy_result_title"
                        android:textColor="@color/text_ff"
                        android:textSize="@dimen/text_55"/>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                    <com.autofactory.smilebuy.component.PageIndicateTextView
                        android:id="@+id/pictureIndicator"
                        fontPath="fonts/ArialBold.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/text_ff"
                        android:textSize="@dimen/text_50"/>

                </LinearLayout>

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <TextView
                    fontPath="fonts/NotoBold.otf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="8dp"
                    android:maxLines="1"
                    android:text="@string/text_smilebuy_result_name"
                    android:textColor="@color/text_a2"
                    android:textSize="@dimen/text_50"/>

                <TextView
                    android:id="@+id/name"
                    fontPath="fonts/NotoBold.otf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/text_66"
                    android:textSize="@dimen/text_50"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <TextView
                    fontPath="fonts/NotoBold.otf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="8dp"
                    android:maxLines="1"
                    android:text="@string/text_smilebuy_result_age"
                    android:textColor="@color/text_a2"
                    android:textSize="@dimen/text_50"/>

                <TextView
                    android:id="@+id/age"
                    fontPath="fonts/NotoBold.otf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/text_66"
                    android:textSize="@dimen/text_50"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <TextView
                    fontPath="fonts/NotoBold.otf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="8dp"
                    android:maxLines="1"
                    android:text="@string/text_smilebuy_result_mileage"
                    android:textColor="@color/text_a2"
                    android:textSize="@dimen/text_50"/>

                <TextView
                    android:id="@+id/mileage"
                    fontPath="fonts/NotoBold.otf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/text_66"
                    android:textSize="@dimen/text_50"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <TextView
                    fontPath="fonts/NotoBold.otf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="8dp"
                    android:maxLines="1"
                    android:text="@string/text_smilebuy_result_fuel"
                    android:textColor="@color/text_a2"
                    android:textSize="@dimen/text_50"/>

                <TextView
                    android:id="@+id/fuelType"
                    fontPath="fonts/NotoBold.otf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/text_66"
                    android:textSize="@dimen/text_50"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <TextView
                    fontPath="fonts/NotoBold.otf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="8dp"
                    android:maxLines="1"
                    android:text="@string/text_smilebuy_result_transmission"
                    android:textColor="@color/text_a2"
                    android:textSize="@dimen/text_50"/>

                <TextView
                    android:id="@+id/transmissionType"
                    fontPath="fonts/NotoBold.otf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/text_66"
                    android:textSize="@dimen/text_50"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <TextView
                    fontPath="fonts/NotoBold.otf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="8dp"
                    android:maxLines="1"
                    android:text="@string/text_smilebuy_result_engine"
                    android:textColor="@color/text_a2"
                    android:textSize="@dimen/text_50"/>

                <TextView
                    android:id="@+id/engine"
                    fontPath="fonts/NotoBold.otf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/text_66"
                    android:textSize="@dimen/text_50"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <TextView
                    fontPath="fonts/NotoBold.otf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="8dp"
                    android:maxLines="1"
                    android:text="@string/text_smilebuy_result_car_num"
                    android:textColor="@color/text_a2"
                    android:textSize="@dimen/text_50"/>

                <TextView
                    android:id="@+id/carNum"
                    fontPath="fonts/NotoBold.otf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/text_66"
                    android:textSize="@dimen/text_50"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="50dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/sunroof"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/checkbox_n"/>

                <TextView
                    fontPath="fonts/NotoBold.otf"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="@string/text_sell_info_sunroof"
                    android:textColor="@color/text_a2"
                    android:textSize="@dimen/text_50"/>

                <ImageView
                    android:id="@+id/smartKey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/checkbox_n"/>

                <TextView
                    fontPath="fonts/NotoBold.otf"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="@string/text_sell_info_smart_key"
                    android:textColor="@color/text_a2"
                    android:textSize="@dimen/text_50"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="50dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/blackBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/checkbox_n"/>

                <TextView
                    fontPath="fonts/NotoBold.otf"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="@string/text_sell_info_black_box"
                    android:textColor="@color/text_a2"
                    android:textSize="@dimen/text_50"/>

                <ImageView
                    android:id="@+id/rearCamera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/checkbox_n"/>

                <TextView
                    fontPath="fonts/NotoBold.otf"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="@string/text_sell_info_rear_camera"
                    android:textColor="@color/text_a2"
                    android:textSize="@dimen/text_50"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="50dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/navigation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/checkbox_n"/>

                <TextView
                    fontPath="fonts/NotoBold.otf"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="@string/text_sell_info_navigation"
                    android:textColor="@color/text_a2"
                    android:textSize="@dimen/text_50"/>

                <ImageView
                    android:id="@+id/caffein"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/checkbox_n"
                    android:visibility="invisible"/>

                <TextView
                    fontPath="fonts/NotoBold.otf"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="@string/text_sell_info_caffein"
                    android:textColor="@color/text_a2"
                    android:textSize="@dimen/text_50"
                    android:visibility="invisible"/>

            </LinearLayout>

            <TextView
                fontPath="fonts/NotoBold.otf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="12dp"
                android:text="@string/text_sell_info_accident"
                android:textColor="@color/text_a2"
                android:textSize="@dimen/text_50"/>

            <TextView
                android:id="@+id/accident"
                fontPath="fonts/NotoBold.otf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/gray_textbox"
                android:minHeight="92dp"
                android:padding="10dp"
                android:textColor="@color/text_66"
                android:textSize="@dimen/text_50"/>

            <TextView
                fontPath="fonts/NotoBold.otf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="12dp"
                android:text="@string/text_sell_info_predicted_price"
                android:textColor="@color/text_a2"
                android:textSize="@dimen/text_50"/>

            <TextView
                android:id="@+id/predictedPrice"
                fontPath="fonts/NotoBold.otf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/gray_textbox"
                android:minHeight="92dp"
                android:padding="10dp"
                android:textColor="@color/text_66"
                android:textSize="@dimen/text_50"/>

            <TextView
                fontPath="fonts/NotoBold.otf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="12dp"
                android:text="@string/text_sell_info_manager_comment"
                android:textColor="@color/text_a2"
                android:textSize="@dimen/text_50"/>

            <TextView
                android:id="@+id/managerComment"
                fontPath="fonts/NotoBold.otf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/gray_textbox"
                android:minHeight="92dp"
                android:padding="10dp"
                android:textColor="@color/text_66"
                android:textSize="@dimen/text_50"/>

            <TextView
                android:id="@+id/smileManInfo"
                fontPath="fonts/NotoBold.otf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="12dp"
                android:text="@string/text_sell_info_manager_info"
                android:textColor="@color/text_a2"
                android:textSize="@dimen/text_50"/>

        </LinearLayout>

        <Button
            android:id="@+id/showCaffein"
            fontPath="fonts/NotoBold.otf"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_h"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/button_yellow"
            android:includeFontPadding="false"
            android:text="@string/action_show_caffein"
            android:textColor="@color/text_ff"
            android:textSize="@dimen/text_50"
            android:visibility="gone"/>

    </LinearLayout>
</ScrollView>