                    <!--android:layout_weight="1"/>-->

            <!--</LinearLayout>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="40dp"
                >

                <LinearLayout
                    android:id="@+id/lay_buy_obd"
                    android:layout_width="257dp"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/buy_obd_bg"
                    android:layout_gravity="center_horizontal"
                    >

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/castell"
                        android:scaleType="fitXY"
                        android:layout_marginLeft="15dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/buy_obj"
                        android:layout_marginLeft="20dp"
                        android:textColor="#FF000000"
                        android:textSize="@dimen/text_55"
                        android:textStyle="bold"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lay_download_caroo"
                    android:layout_width="257dp"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/buy_caroo_bg"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    >

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/caroo"
                        android:scaleType="fitXY"
                        android:layout_marginLeft="15dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/download_caroo"
                        android:layout_marginLeft="20dp"
                        android:textColor="#FFFFFFFF"
                        android:textSize="@dimen/text_55"
                        android:textStyle="bold"
                        />
                </LinearLayout>

                <TextView
                    fontPath="fonts/NotoReg.otf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/text_setting_1"
                    android:textColor="@color/text_ff"
                    android:textSize="@dimen/text_50"
                    android:layout_marginTop="30dp"
                    />


                <ImageButton
                    android:id="@+id/kakaoAsk"
                    android:layout_width="257dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/kakao_btn"
                    />
            </LinearLayout>

        </LinearLayout>
    </FrameLayout>

</LinearLayout>
