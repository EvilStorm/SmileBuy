<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:orientation="vertical"
              tools:context="com.autofactory.smilebuy.ui.login.FindPwActivity"
              android:background="@color/back_ff"
              tools:ignore="MissingPrefix">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_h"
        android:background="@drawable/top_bar">

        <ImageButton
            android:id="@+id/back"
            android:layout_width="@dimen/top_bar_button_h"
            android:layout_height="match_parent"
            android:layout_gravity="left|center_vertical"
            android:background="@drawable/button_trans"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="12dp"
            android:src="@drawable/icon_top_before"/>

        <TextView
            fontPath="fonts/NotoBold.otf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/title_activity_find_pw"
            android:textColor="@color/text_ff"
            android:textSize="@dimen/text_72"/>
    </FrameLayout>


    <EditText
        android:id="@+id/name"
        fontPath="fonts/NotoBold.otf"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_text_h"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/gray_textbox"
        android:drawableRight="@drawable/icon_name"
        android:gravity="center_vertical|left"
        android:hint="@string/prompt_name_find_pw"
        android:inputType="text"
        android:maxLines="1"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:singleLine="true"
        android:textColor="@color/text_66"
        android:textColorHint="@color/text_a2"
        android:textSize="@dimen/text_50"/>

    <EditText
        android:id="@+id/email"
        fontPath="fonts/NotoBold.otf"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_text_h"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/gray_textbox"
        android:drawableRight="@drawable/icon_mail"
        android:gravity="center_vertical|left"
        android:hint="@string/prompt_email_find_pw"
        android:imeActionId="@+id/confirm"
        android:imeActionLabel="@string/action_confirm"
        android:imeOptions="actionUnspecified"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:singleLine="true"
        android:textColor="@color/text_66"
        android:textColorHint="@color/text_a2"
        android:textSize="@dimen/text_50"/>

    <Button
        android:id="@+id/confirm"
        fontPath="fonts/NotoBold.otf"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_h"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/button_yellow"
        android:includeFontPadding="false"
        android:text="@string/action_confirm"
        android:textColor="@color/text_ff"
        android:textSize="@dimen/text_50"/>

</LinearLayout>
